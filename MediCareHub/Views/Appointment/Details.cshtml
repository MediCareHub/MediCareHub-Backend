@model MediCareHub.ViewModels.AppointmentViewModel
@{
    ViewData["Title"] = "Appointment Details";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}
<h2>Appointment Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Appointment ID</dt>
        <dd class="col-sm-10">@Model.AppointmentId</dd>

        <dt class="col-sm-2">Patient Name</dt>
        <dd class="col-sm-10">@Model.PatientFullName</dd>

        <dt class="col-sm-2">Appointment Date</dt>
        <dd class="col-sm-10">@Model.AppointmentDate.ToString("g")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>

        <dt class="col-sm-2">Doctor Name</dt>
        <dd class="col-sm-10">@Model.DoctorFullName</dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Basic example">
    <a asp-action="Edit" asp-route-id="@Model.AppointmentId" class="btn btn-warning">Edit Appointment</a>
    <a asp-action="Delete" asp-route-id="@Model.AppointmentId" class="btn btn-danger">Delete Appointment</a>
</div>
<hr />

<h3>Medical Records</h3>

<div>
    @if (Model.MedicalRecord != null)
    {
        <dl class="row">
            <dt class="col-sm-2">Record ID</dt>
            <dd class="col-sm-10">@Model.MedicalRecord.RecordId</dd>

            <dt class="col-sm-2">Diagnosis</dt>
            <dd class="col-sm-10">@Model.MedicalRecord.Diagnosis</dd>

            <dt class="col-sm-2">Medication</dt>
            <dd class="col-sm-10">@Model.MedicalRecord.Medication</dd>

            <dt class="col-sm-2">Created At</dt>
            <dd class="col-sm-10">@Model.MedicalRecord.CreatedAt.ToString("g")</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.MedicalRecord.RecordId" class="btn btn-warning">Edit Medical Record</a>
    }
    else
    {
        <p>No medical records available for this appointment.</p>
    }
    <a asp-action="Create" asp-route-appointmentId="@Model.AppointmentId" class="btn btn-primary">Add Medical Record</a>
</div>

<hr />

<a class="btn btn-secondary" href="javascript:window.history.back();">Back</a>
