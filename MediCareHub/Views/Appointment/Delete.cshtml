@model MediCareHub.ViewModels.AppointmentViewModel

<h2>Delete Appointment</h2>

<h3>Are you sure you want to delete this appointment?</h3>

<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Appointment ID</dt>
        <dd class="col-sm-10">@Model.AppointmentId</dd>

        <dt class="col-sm-2">Doctor ID</dt>
        <dd class="col-sm-10">@Model.DoctorId</dd>

        <dt class="col-sm-2">Patient ID</dt>
        <dd class="col-sm-10">@Model.PatientId</dd>

        <dt class="col-sm-2">Appointment Date</dt>
        <dd class="col-sm-10">@Model.AppointmentDate.ToString("g")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AppointmentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
    </form>
</div>
