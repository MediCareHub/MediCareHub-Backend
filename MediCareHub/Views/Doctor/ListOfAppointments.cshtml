@model IEnumerable<MediCareHub.ViewModels.AppointmentViewModel>

@{
    ViewData["Title"] = "Doctor Appointments";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml"; // Ensure this layout is the same as the dashboard
}

<h1 class="h3 mb-4 text-gray-800">Appointmentsssssss</h1>

<div class="row">
    @foreach (var appointment in Model)
    {
        <div class="col-lg-6 mb-4">
            <div class="card shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Appointment with @appointment.PatientFullName
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                Date: @appointment.AppointmentDate.ToString("MM/dd/yyyy hh:mm tt")
                            </div>
                            <div class="text-xs text-secondary mt-2">
                                Status:
                                <span class="badge @(appointment.Status == "Completed" ? "badge-success" : "badge-warning")">@appointment.Status</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>

                    <!-- Show Medical Report Form if the appointment is not completed -->
                    @if (appointment.Status != "Completed")
                    {
                        <form asp-action="AddMedicalReport" method="post">
                            <input type="hidden" name="AppointmentId" value="@appointment.AppointmentId" />
                            <div class="form-group mt-3">
                                <label for="diagnosis">Diagnosis</label>
                                <textarea class="form-control" name="Diagnosis" required></textarea>
                            </div>
                            <div class="form-group">
                                <label for="medication">Medication</label>
                                <textarea class="form-control" name="Medication" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm">Submit Report</button>
                        </form>
                    }
                    else
                    {
                        <!-- Display medical record if appointment is completed -->
                        <div class="mt-3">
                            <p><strong>Diagnosis:</strong> @appointment.MedicalRecord?.Diagnosis ?? "N/A"</p>
                            <p><strong>Medication:</strong> @appointment.MedicalRecord?.Medication ?? "N/A"</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
