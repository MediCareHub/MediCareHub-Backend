@model MediCareHub.ViewModels.PatientDashboardViewModel


@{
    ViewData["Title"] = "Patient Dashboard";
    Layout = "~/Views/Shared/_PatientLayout.cshtml"; // Reference the patient layout here
}

<h1 class="h3 mb-4 text-gray-800">Welcome, @Model.PatientFullName!</h1>

<!-- Upcoming Appointments -->
<h4>Upcoming Appointments</h4>
<ul class="list-group">
    @if (Model?.UpcomingAppointments != null && Model.UpcomingAppointments.Any())
    {
        foreach (var appointment in Model.UpcomingAppointments)
        {
            <li class="list-group-item">
                <strong>Doctor: @appointment.Doctor.User.FullName</strong> - @appointment.AppointmentDate.ToString("MM/dd/yyyy hh:mm tt")
                <span class="badge badge-success">@appointment.Status</span>
            </li>
        }
    }
    else
    {
        <li class="list-group-item">No upcoming appointments.</li>
    }
</ul>

<!-- Book New Appointment -->
<a href="@Url.Action("BookAppointment", "Patient")" class="btn btn-primary mt-3">Book New Appointment</a>
