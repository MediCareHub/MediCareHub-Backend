@{
}
@model IEnumerable<MediCareHub.ViewModels.MedicalRecordViewModel>

@{
    ViewData["Title"] = "Medical Records";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml"; // Reference your Doctor layout here
}
<h2>Medical Records</h2>

<table class="table">
    <thead>
        <tr>
            <th>Appointment ID</th>
            <th>Patient Name</th>
            <th>Diagnosis</th>
            <th>Medication</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.AppointmentId</td>
                <td>@record.PatientFullName</td> 
                <td>@record.Diagnosis</td>
                <td>@record.Medication</td>
                <td>@record.CreatedAt.ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@record.RecordId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@record.RecordId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@record.RecordId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Medical Record</a>
