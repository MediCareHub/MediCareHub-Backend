@model MediCareHub.ViewModels.MedicalRecordViewModel

<h2>Edit Medical Record</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="RecordId" />

    <div class="form-group">
        <label asp-for="AppointmentId"></label>
        <input asp-for="AppointmentId" class="form-control" />
        <span asp-validation-for="AppointmentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Diagnosis"></label>
        <input asp-for="Diagnosis" class="form-control" />
        <span asp-validation-for="Diagnosis" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Medication"></label>
        <input asp-for="Medication" class="form-control" />
        <span asp-validation-for="Medication" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
</form>

