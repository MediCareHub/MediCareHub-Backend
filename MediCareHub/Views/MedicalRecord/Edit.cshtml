@model MediCareHub.ViewModels.MedicalRecordViewModel
@{
    ViewData["Title"] = "Edit Medical Record";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}
<h2>Edit Medical Record</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="RecordId" />
    <input type="hidden" asp-for="AppointmentId" />
    <div class="form-group">
        <label asp-for="PatientFullName"></label>
        <input asp-for="PatientFullName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Diagnosis"></label>
        <input asp-for="Diagnosis" class="form-control" />
        <span asp-validation-for="Diagnosis" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Medication"></label>
        <input asp-for="Medication" class="form-control" />
        <span asp-validation-for="Medication" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" href="javascript:window.history.back();">Back</a>
</form>
