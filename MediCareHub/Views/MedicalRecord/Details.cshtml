@{
}
@model MediCareHub.ViewModels.MedicalRecordViewModel

@{
    ViewData["Title"] = "Medical Record Details";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

<h2>Medical Record Details</h2>

<div>
    <h4>Medical Record</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Record ID</dt>
        <dd class="col-sm-10">@Model.RecordId</dd>

        <dt class="col-sm-2">Appointment ID</dt>
        <dd class="col-sm-10">@Model.AppointmentId</dd>

        <dt class="col-sm-2">Diagnosis</dt>
        <dd class="col-sm-10">@Model.Diagnosis</dd>

        <dt class="col-sm-2">Medication</dt>
        <dd class="col-sm-10">@Model.Medication</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("g")</dd>
    </dl>
</div>

<a class="btn btn-secondary" href="@Url.Action("Dashboard", "Doctor")">Back to Dashboard</a>

